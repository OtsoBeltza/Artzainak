    <script>
        $(document).ready(function() {
            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            $('#date').attr('min', today);
            
            $('#reservation-form').on('submit', function(e) {
                e.preventDefault();
                
                // Here you would typically send the form data to your server
                // For this example, we'll just show the confirmation message
                
                // Form validation
                let valid = true;
                $('input[required], select[required]').each(function() {
                    if (!$(this).val()) {
                        valid = false;
                        $(this).addClass('error');
                    } else {
                        $(this).removeClass('error');
                    }
                });
                
                if (!$('input[name="previous-training"]:checked').val()) {
                    valid = false;
                    $('input[name="previous-training"]').closest('.form-group').addClass('error');
                } else {
                    $('input[name="previous-training"]').closest('.form-group').removeClass('error');
                }
                
                if (valid) {
                    // Get form data
                    const formData = {
                        name: $('#name').val(),
                        email: $('#email').val(),
                        phone: $('#phone').val(),
                        dogName: $('#dog-name').val(),
                        dogBreed: $('#dog-breed').val(),
                        dogAge: $('#dog-age').val(),
                        courseType: $('#course-type').val(),
                        date: $('#date').val(),
                        time: $('#time').val(),
                        previousTraining: $('input[name="previous-training"]:checked').val(),
                        message: $('#message').val()
                    };
                    
                    // In a real implementation, you would send this data to your server
                    // which would then use Google Calendar API to create an event
                    console.log('Form data:', formData);
                    
                    // Show confirmation message
                    $('#reservation-form').hide();
                    $('#confirmation').show();
                    
                    // For this example, let's create a Google Calendar event link
                    // This is a simplified example - in a real implementation, you'd use the Google Calendar API
                    const eventTitle = `Cours d'éducation canine - ${formData.courseType} - ${formData.name} - ${formData.dogName}`;
                    const eventStart = `${formData.date}T${formData.time}:00`;
                    // Calculate end time (1 hour after start)
                    const startMoment = moment(eventStart);
                    const endMoment = startMoment.clone().add(1, 'hours');
                    const eventEnd = endMoment.format('YYYY-MM-DDTHH:mm:00');
                    
                    const eventDetails = `
                        Propriétaire: ${formData.name}
                        Email: ${formData.email}
                        Téléphone: ${formData.phone}
                        Chien: ${formData.dogName} (${formData.dogBreed})
                        Âge du chien: ${formData.dogAge}
                        Type de cours: ${formData.courseType}
                        Expérience préalable: ${formData.previousTraining === 'yes' ? 'Oui' : 'Non'}
                        
                        Message:
                        ${formData.message}
                    `;
                    
                    // Note: In a real implementation, you would use server-side code to create the event
                    // This link is just for demonstration purposes
                    console.log('Event details for Google Calendar API:', {
                        summary: eventTitle,
                        description: eventDetails,
                        start: { dateTime: eventStart },
                        end: { dateTime: eventEnd }
                    });
                }
            });
        });
    </script>
